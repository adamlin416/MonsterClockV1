<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:background="#D3D6E3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your monster egg"
        android:textSize="25dp"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/eggSelectImageView1"
            android:tag="@string/morning_egg_name"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_style"
            android:src="@drawable/monster_morning_egg_focused" />

        <ImageView
            android:id="@+id/eggSelectImageView2"
            android:tag="@string/balance_egg_name"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_style"
            android:src="@drawable/monster_morning_egg_focused" />

        <ImageView
            android:id="@+id/eggSelectImageView3"
            android:tag="@string/night_egg_name"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:background="@drawable/border_style"
            android:src="@drawable/monster_morning_egg_focused" />
    </LinearLayout>
</LinearLayout>